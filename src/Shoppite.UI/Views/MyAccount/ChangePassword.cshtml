</div>
<script>
    function Mypassword() {
        var password = document.getElementById("Password").value;
        var cpassword = document.getElementById("cpassword").value;
        var upperCaseLetters = /[A-Z]/g;
        if (password.match(upperCaseLetters)) {
           // document.getElementById("mypwdmsg").innerHTML = "";
            return true;
        } else {
            document.getElementById("mypwdmsg").innerHTML = "Password should contains atleast one Capital letter";
            return false;
        }
    }
