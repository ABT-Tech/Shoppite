@model Shoppite.Application.Models.MainModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
<div class="main-area">
    <div class="contact-page-area">
        <div class="container">
            <div class="contact-from-atea">
                <div class="form-and-info">
                    <div class="row">
                        <div class="col-md-4">
                            <div class="contactDetails contactHead">
                            </div>
                        </div>
                        <div class="col-md-8">
                            <div class="contactfrom">
                                <h1>Change Password</h1>
                                <form method="post" enctype="multipart/form-data" asp-controller="MyAccount" asp-action="ChangePassword">
                                    <input type="hidden" asp-for="UserId" />
                                    <div class="row">
                                        <div class="col-lg-12">
                                            <input type="password" asp-for="@Model.Password" placeholder="password" id="Password" class="form-control">
                                            <span asp-validation-for="@Model.Password" class="text-danger" id="mypwdmsg"></span>
                                        </div>

                                        <div class="col-lg-12">
                                            <input type="password" asp-for="@Model.CPassword" style="margin-top:10px;" placeholder="Confirm password" id="cpassword" class="form-control">
                                            <span asp-validation-for="@Model.CPassword" class="text-danger" id="mycpwdmsg"></span>

                                        </div>

                                    </div>
                                    <button style="margin-top:20px;" class="btn btnContact" type="submit">Change Password</button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
    
      
  