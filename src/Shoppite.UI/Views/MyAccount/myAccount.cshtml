    <script type="text/javascript">
      
        var _URL = window.URL || window.webkitURL;
      
        $(document).on('change', '#UserProfileImage', function () {
            var self = $(this);
            var file, img;
            if ((file = this.files[0])) {
                img = new Image();
                img.onload = function () {
                    if (this.height > 600 || this.width > 500) {
                        alert("Height and Width must not exceed 100px.");
                        self.val('');
                        return false;
                    }
                    var size = parseFloat(file.size / 1024);
                    if (size >= 20) {
                        alert('Max Sixe exceed,Upload image upto 20kb only');
                        self.val('');
                        return false;
                    }
                };
                img.src = _URL.createObjectURL(file);
            }
        });
    </script>
