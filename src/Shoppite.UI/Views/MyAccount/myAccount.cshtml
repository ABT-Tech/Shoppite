<script src="https://ajax.googleapis.com/ajax/libs/jquery/1.9.1/jquery.min.js"></script>
@model Shoppite.Application.Models.MainModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
<div class="main-area">
    <div class="megamenu-area">
        <div class="container">
            <div class="row">
                <div class="col-md-9">
                    <div class="megamenu">
                        <nav>
                            <ul>
                                <li>
                                    <a class="home" asp-action="Index" asp-controller="Home">Home</a>
                                    <div class="megamenudown-mini home-ve">
                                        <div class="mega-top">
                                            <div class="mega-item-menu">
                                                <a class="title" href="#"><span>Home variyation</span></a>
                                                <a href="index-2.html"><span>Home2</span></a>
                                                <a href="index-3.html"><span>Home3</span></a>
                                                <a href="index-4.html"><span>Home4</span></a>
                                            </div>
                                        </div>
                                    </div>
                                </li>
                                @await Html.PartialAsync("~/Views/Home/_Categories.cshtml", Model)
                                @await Html.PartialAsync("~/Views/Home/_MoreCategories.cshtml", Model)
                            </ul>
                        </nav>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="search-box">
                        <form method="get" action="#" id="searchbox-eleyas">
                            <p>
                                <input type="text" value="" placeholder="You keyword..." name="search_query">
                                <button class="button-search" name="submit_search" type="submit">
                                    <span><i class="fa fa-search"></i></span>
                                </button>
                            </p>
                        </form>
                    </div>
                </div>               
            </div>
        </div>
    </div>
    <div class="contact-page-area">
        <div class="container">
            <div class="breadcrumb" style="color:#777; background-color: white !important">
                <span><a title="Return to Home" href="index.html" class="home"></a>Home</span>
                <span class="navigation-pipe"><i class="fa fa-angle-right"></i></span>
                My Account
            </div>
            @foreach (var image in Model.Myaccount.Take(1))
            {
                <img src="@Url.Content("~")@image.CoverImage" style="margin-right: 55px;max-height:100px; max-width: 100px; float: right;" />
            }
            <div class="contact-from-atea">
                <div class="form-and-info">
                    <div class="row">
                        <div class="col-md-4">
                            <div class="contactDetails contactHead">
                                <h3>CONTACT Info</h3>
                                @foreach (var myaccount in Model.Myaccount.Take(1))
                                {
                                    <p>
                                        <span class="iconContact"><i class="fa fa-map-marker"></i></span>
                                        @myaccount.Address
                                    </p>
                                    <p>
                                        <span class="iconContact"><i class="fa fa-phone"></i></span>
                                        @myaccount.ContactNumber
                                    </p>
                                    <p>
                                        <span class="iconContact"><i class="fa fa-envelope-o"></i></span>
                                        Email:@myaccount.Email
                                    </p>
                                }
                            </div>
                        </div>
                        <div class="col-md-8">
                            <div class="contactfrom">
                                @foreach (var myaccount in Model.Myaccount.Take(1))
                                {
                                    <h1>My Profile</h1>
                                    <form action="#">
                                        <div class="row">
                                            <div class="col-lg-6">
                                                <input type="text" asp-for="@myaccount.UserName" readonly id="UserName" class="form-control">
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="col-lg-6 contactemail">
                                                <input type="email" asp-for="@myaccount.Email" readonly id="Email" class="form-control">
                                            </div>
                                        </div>
                                        <a class="btn btnContact" asp-controller="MyAccount" asp-action="EditProfile">Edit Profile</a>
                                    </form>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

