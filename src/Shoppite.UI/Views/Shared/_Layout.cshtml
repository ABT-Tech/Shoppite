
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta http-equiv="x-ua-compatible" content="ie=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <meta name="description" content="">
 
    <partial name="_Styles" />

</head>

<body class="home">

    <div class="containers text-center" style="z-index:10;">
        <img src="~/img/cart_loder.gif" alt="" class="mx-auto d-block">
    </div>
    <!-- Start main area -->
    <div class="main-area" style="pointer-events: none; filter: blur(20px); overflow: hidden; width: 100%; height: 100%; position: absolute; top: 0; left: 0;">
        @*<div class="main-area">*@
        <!-- Start header -->
        <header>
            <!-- Start top menu -->
            <div class="top-menu" style="">
                <div class="container">
                    <div class="row">
                        <div class="col-md-5 col-12 pull-left">
                            <nav>
                                <ul>
                                </ul>
                            </nav>
                        </div>
                        <div class="col-md-7 col-12 pull-right">
                            <div class="call-to-acction pull-right">
                                <div>
                                    <span><a href="https://shooppy.in/" class="btn  btn-sm btn-secondary">Join to Shooppy</a></span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <!-- End top menu -->
            <!-- Start header meddle -->
            <div class="header-meddil">
                <div class="container">
                    <div class="row headRow">
                        <div style="padding-bottom: 10px; margin-top: -25px;" class="col-lg-2 col-md-2 col-3 MobLogoDiv">
                            @await Component.InvokeAsync("VendorLogo")
                        </div>

                        <div class="col-lg-10 col-md-10 col-8 mobIconDiv">
                            <div class="meddil-services">

                                @if (User.Identity.IsAuthenticated)
                                {
                                    <div class="service-icon-text  service-text-icon-active col-lg-2 col-md-2 col-2">
                                        <a asp-action="myAccount" asp-controller="MyAccount" class="d-flex">
                                            <div class="service-icon floatleft">
                                                <i class="fa fa-user HeadUser" style=""></i>
                                            </div>
                                            <div class="service-text floatright d-none d-sm-none d-md-block pl-2">
                                                <h3>My Account</h3>
                                                <p></p>
                                            </div>
                                        </a>

                                    </div>
                                    <div class="service-icon-text col-half-offset service-text-icon-active col-lg-2 col-md-2 col-2">
                                        <a asp-action="MyOrders" asp-controller="Orders" class="d-flex">
                                            <div class="service-icon floatleft">
                                                <img class="BagImg" src="~/img/shoppingbagWhite-fotor-bg-remover-orignal.png" style="">
                                                @*<i class="fa fa-bag-shopping fa-shopping-bag"></i>*@
                                            </div>
                                            <div class="service-text floatright d-none d-sm-none d-md-block pl-2">
                                                <h3>Order</h3>
                                                <p></p>
                                            </div>
                                        </a>
                                    </div>
                                    <div class="service-icon-text col-half-offset service-text-icon-active col-lg-2 col-md-2 col-2">
                                        <a asp-action="Wishlist" asp-controller="Wishlist" class="d-flex">
                                            <div class="service-icon floatleft">
                                                <i class="fa fa-heart headHeart" style=""></i>
                                            </div>
                                            <div class="service-text floatright d-none d-sm-none d-md-block pl-2">
                                                <h3>Wishlist</h3>
                                                <p></p>
                                            </div>
                                        </a>
                                    </div>
                                    <div class="service-icon-text col-half-offset service-text-icon-active col-lg-2 col-md-2 col-2">
                                        <a asp-action="Coin_balance" asp-controller="Reward" class="d-flex">
                                            <div class="service-icon floatleft">
                                                <i class="fa-solid headprize fa-gift" style="color: #fcfcfc;"></i>
                                            </div>
                                            <div class="service-text floatright d-none d-sm-none d-md-block pl-2">
                                                <h3>Rewards</h3>
                                                <p></p>
                                            </div>
                                        </a>
                                    </div>
                                }
                                else
                                {
                                    <div class="service-icon-text  service-text-icon-active col-lg-2 col-md-2 col-2">
                                        <a asp-action="Login" asp-controller="Authentications" class="d-flex">
                                            <div class="service-icon floatleft">
                                                <i class="fa fa-user HeadUser" style=""></i>
                                            </div>
                                            <div class="service-text floatright d-none d-sm-none d-md-block pl-2">
                                                <h3>MyAccount</h3>
                                                <p></p>
                                            </div>
                                        </a>
                                    </div>

                                    <div class="service-icon-text col-half-offset service-text-icon-active col-lg-2 col-md-2 col-2">
                                        <a asp-action="Login" asp-controller="Authentications" class="d-flex">
                                            <div class="service-icon floatleft">
                                                <img class="BagImg" src="~/img/shoppingbagWhite-fotor-bg-remover-orignal.png" style="">
                                                @*<i class="fa fa-bag-shopping fa-shopping-bag"></i>*@
                                            </div>
                                            <div class="service-text floatright d-none d-sm-none d-md-block pl-2">
                                                <h3>Order</h3>
                                                <p></p>
                                            </div>
                                        </a>
                                    </div>

                                    <div class="service-icon-text col-half-offset service-text-icon-active col-lg-2 col-md-2 col-2 ">
                                        <a asp-action="Login" asp-controller="Authentications" class="d-flex">
                                            <div class="service-icon floatleft">
                                                <i class="fa fa-heart headHeart" style=""></i>
                                            </div>
                                            <div class="service-text floatright d-none d-sm-none d-md-block pl-2">
                                                <h3>Wishlist</h3>
                                                <p></p>
                                            </div>
                                        </a>
                                    </div>                           
                                    <div class="service-icon-text col-half-offset service-text-icon-active col-lg-2 col-md-2 col-2">
                                        <a asp-action="Login" asp-controller="Authentications" class="d-flex">
                                            <div class="service-icon floatleft">
                                                <i class="fa-solid headprize  fa-gift" style="color: #fcfcfc;"></i>
                                            </div>
                                            <div class="service-text floatright d-none d-sm-none d-md-block pl-2">
                                                <h3>Rewards</h3>
                                                <p></p>
                                            </div>
                                        </a>
                                    </div>
                                }

                                @await Component.InvokeAsync("Cart")
                            </div>
                        </div>
                    </div>
                </div>
                @await Component.InvokeAsync("MegaMenu")
            </div>
            <!-- End header meddil -->
        </header>
        <!-- End header -->
        @RenderBody()
        <!-- Start footer area -->
        <footer>
            <!-- Start footer top area -->
            <div class="footer-top-area">
                <div class="container">
                    <div class="footer-top">
                        <div class="row">
                            <div class="col-lg-4 col-md-4">
                                <div class="footer-logo">
                                    @await Component.InvokeAsync("VendorLogo")
                                    @*<a href="index.html"><img src="img/footer-logo.png" alt="footer logo"></a>*@
                                </div>
                                <div class="footer-top-sociul">
                                </div>
                            </div>
                            <div class="col-lg-8 col-md-8">
                                <div class="footer-top-about-us">
                                    <h4><span>ABOUT US</span></h4>
                                    <p>shoppite is a provide of highly features android and ios app and also provide web. This platform through increase your business. </p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <!-- End footer top area -->
            <!-- Start footer center area -->
            <div class="footer-center-area">
                <div class="container">
                    <div class="footer-center">
                        <div class="row">
                            @await Component.InvokeAsync("FooterDetails")

                            <div class="col-lg-3 col-md-6 col-sm-6 col-12 mb-40">
                                <div class="footer-center-title">
                                    <h4><span>Newsletter</span></h4>
                                </div>
                                <div class="newslettei-from">
                                    <p>Subscribe to the ShopPite mail list to receive updates on new arrivals, special offers and other discount information.</p>
                                    <form method="get" enctype="multipart/form-data">
                                        <div class="form-group">
                                            <input type="email" placeholder="Enter your e-mail" size="18" name="email" id="newsletter-input" class="inputNew form-control grey newsletter-input">
                                            <button class="btn btn-default button button-small" asp-action="News_Letter_Submit" asp-controller="Home" name="submitNewsletter" type="submit"><i class="fa fa-chevron-right"></i></button>
                                            <p style="margin-top: -20px; color: #fe5b5a;" class="font-weight-bold">@TempData["EmailError"]</p>
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="footer-copyright-area">
                <div class="container">
                    <div class="footer-copyright">
                        <p>Copyright &copy; 2023 <a href="https://shooppy.in/" target="_blank">Shooppy</a>. All rights reserved.</p>
                    </div>
                </div>
                <div class="scroll-to-top pull-right">
                    <a href="#" class="bstore-scrollertop"><i class="fa fa-arrow-up"></i></a>
                </div>
            </div>
            <!-- Start footer copyright area -->
        </footer>
        <!-- End footer area -->
    </div>
    <partial name="_Scripts" />
    <partial name="_ValidationScriptsPartial" />
 @*   @await RenderSectionAsync("Scripts", required: false)*@

    <!-- End main area -->
    <script>
        

        $(window).on('load', function () {
            //  $(".slider-area").attr
            $(".containers").fadeOut("slow");
            // $(".container").remove.attr("style", "display:initial");
            /* pointer - events: none;*/
            $(".main-area").removeAttr("style", "filter: blur(20px)");
        });
    </script>
    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>
