                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <!-- End top menu -->
            <!-- Start header meddle -->
            <div class="header-meddil">
                <div class="container-fluid">
                    <div class="row headRow">
                        <div style="padding-bottom: 10px; margin-top: -25px;" class="col-lg-3 col-md-2 col-4 MobLogoDiv">
                            @* <div class="logo res">
                                    <a href="index.html"><img src="img/logo.png" alt=""></a>
                                </div>*@
                            @await Component.InvokeAsync("VendorLogo")
                        </div>
                        <div class="col-lg-9 col-md-10 col-8 mobIconDiv">
                            <div class="meddil-services">
                                @if (User.Identity.IsAuthenticated)
                                {
                                    <div class="service-icon-text service-text-icon-active col-lg-3 col-md-3 col-3">
                                        <a asp-action="myAccount" asp-controller="MyAccount" name="link" class="d-flex">
                                            <div class="service-icon floatleft">
                                                <i class="fa fa-user HeadUser" style=""></i>
                                            </div>
                                            <div class="service-text floatright d-none d-sm-none d-md-block pl-2">
                                                <h3>My Account</h3>
                                                <p></p>
                                            </div>
                                        </a>
                                        @*<div class="add-to-cart-product pull-right">
                                                @if (User.Identity.IsAuthenticated)
                                                 {
                                               <div class="cart-price">
                                             <div class="cart-product-line fast-line">
                                                  <span>Hi @User.Identity.Name</span>
                                               </div>
                                             </div>
                                             <div class="cart-checkout">
                                              <a href="/Authentications/Login">Logout<i class="fa fa-chevron-right"></i></a>
                                                   </div>
                                                 }
                                                 else
                                                  {
                                               <div class="cart-checkout">
                                               <a href="/Authentications/Login">Login<i class="fa fa-chevron-right"></i></a>
                                             </div>
                                              }
                                            </div>*@
                                    </div>
                                    <div class="service-icon-text service-text-icon-active col-lg-3 col-md-3 col-3">
                                        <a asp-action="MyOrders" asp-controller="Orders" class="d-flex" name="link">
                                            <div class="service-icon floatleft">
                                                <img class="BagImg" src="~/img/shoppingbagWhite-fotor-bg-remover-orignal.png" alt="loaderimg" loading="lazy" style="">
                                                @*<i class="fa fa-bag-shopping fa-shopping-bag"></i>*@
                                            </div>
                                            <div class="service-text floatright d-none d-sm-none d-md-block pl-2">
                                                <h3>My Order</h3>
                                                <p></p>
                                            </div>
                                        </a>
                                    </div>
                                    <div class="service-icon-text service-text-icon-active col-lg-3 col-md-3 col-3">
                                        <a asp-action="Wishlist" asp-controller="Wishlist" class="d-flex" name="link">
                                            <div class="service-icon floatleft">
                                                <i class="fa fa-heart headHeart" style=""></i>
                                            </div>
                                            <div class="service-text floatright d-none d-sm-none d-md-block pl-2">
                                                <h3>My Wishlist</h3>
                                                <p></p>
                                            </div>
                                        </a>
                                    </div>
                                }
