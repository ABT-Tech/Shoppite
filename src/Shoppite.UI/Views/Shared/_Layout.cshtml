                                @await Component.InvokeAsync("AboutUs")
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <!-- End footer top area -->
            <!-- Start footer center area -->
            <div class="footer-center-area">
                <div class="container-fluid">
                    <div class="footer-center">
                        <div class="row">
                            @await Component.InvokeAsync("FooterDetails")
                            <div class="col-lg-3 col-md-6 col-sm-6 col-12 mb-40">
                                <div class="footer-center-title">
                                    <h4><span>Newsletter</span></h4>
                                </div>
                                <div class="newslettei-from">
                                    <p>Subscribe to the mail list to receive updates on new arrivals, special offers and other discount information.</p>
                                    <form method="get" enctype="multipart/form-data">
                                        <div class="form-group">
                                            <input type="email" placeholder="Enter your e-mail" size="18" name="email" id="newsletter-input" class="inputNew form-control grey newsletter-input">
                                            <button class="btn btn-default button button-small" asp-action="News_Letter_Submit" asp-controller="Home" name="submitNewsletterbutton" type="submit"><i class="fa fa-chevron-right"></i></button>
                                            <p style="margin-top: -20px; color: #fe5b5a;" class="font-weight-bold">@TempData["EmailError"]</p>
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <!-- Start footer center area -->
            <!-- Start footer menu area -->
            <div class="footer-menu-area">
                <div class="container">
                    <div class="footer-menu-and-card">
                        <div class="row">
                            <div class="col-md-8 col-12 pull-left">
                                <div class="footer-card pull-left">
                                    <div class="footer-copyright">
                                        <p>Copyright &copy; 2023 <a href="https://shooppy.in/" target="_blank">Shooppy</a>. All rights reserved.</p>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-4 col-12 pull-right">
