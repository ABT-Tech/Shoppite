                                            <li><a asp-controller="Home" asp-action="MerchantPrivacyPolicy" name="link">Privacy Policy</a></li>
                                            <li><a asp-controller="Home" asp-action="MerchantRefundPolicy" name="link">Return & Refund Policy</a></li>
                                        </ul>
                                    </nav>
                                </div>
                            </div>
                        </div>
