        function SendToVendor() {
            var Message = document.getElementById("Message").value;
            var con = JSON.stringify(Message);
            $.ajax({
                type: "POST",
                url: '@Url.Action("Sendbox","Inbox")',
                dataType: 'JSON',
                data: con,
                contentType: "application/json; charset=utf-8",
                success: function (result) {
