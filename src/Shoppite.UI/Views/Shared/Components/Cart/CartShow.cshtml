@model Shoppite.Application.Models.CartModel

<div class="service-icon-text service-text-icon-active">
    <a asp-action="Cart" asp-controller="Cart" class="d-flex">
        <div class="service-icon floatleft">
            <i class="fa fa-shopping-cart"></i>
        </div>
        <div class="service-text floatright pl-2">
            <h3>My Cart</h3>
            <p>@Model.F_Getproduct_CartDetails_By_Orgids.Count item</p>
        </div>
    </a>
    <div class="add-to-cart-product pull-right">
        @foreach (var Cart in Model.F_Getproduct_CartDetails_By_Orgids.Take(4))
        {
            <div class="cart-product product-item11">
                <div class="cart-product-image">
                    <a href="#"><img src="@Cart.CoverImage" alt="Product"></a>
                </div>
                <div class="cart-product-info">
                    <p><span>Qty &nbsp;</span>@Cart.Qty<a href="#" class="product_name_Over">@Cart.ProductName</a></p>
                    @*<a href="single-product.html">S, Orange</a>*@
                    <span class="price">₹@Cart.Price</span>
                </div>
                @*<div class="cart-product-remove">
                    <i class=""></i>
                </div>*@
            </div>
        }

        <div class="cart-checkout">
            <a asp-action="Cart" asp-controller="Cart">Go To Cart<i class="fa fa-shopping-cart"></i></a>
        </div>

        @*<div class="cart-price">
            <div class="cart-product-line fast-line">
                <span>Shipping</span>
                <span class="free-shiping">Free shipping!</span>
            </div>
            <div class="cart-product-line">
                <span>Total</span>
                <span class="total">£ 88.81</span>
            </div>
        </div>
        <div class="cart-checkout">
            <a asp-action="CheckOut" asp-controller="Cart">Check out<i class="fa fa-chevron-right"></i></a>
        </div>*@

    </div>
</div>

