@model Shoppite.Application.Models.MainModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
<div class="row">
    @foreach (var myorders in Model.Orders)
    {
        <div class="col-md-3 col-sm-6 col-12">
            <div class="wishlist-box">
                <p>@myorders.OrderStatus</p>
                <div class="wish-image">
                    <a href="single-product.html">
                        <img style="height:200px;width:200px" src="@Url.Content("~")/@myorders.CoverImage" alt="">
                    </a>
                </div>               
                <div class="wishlisst-info ">
                    <p>@myorders.ProductName </p>                 
                </div>
            </div>
        </div>
    }
</div>