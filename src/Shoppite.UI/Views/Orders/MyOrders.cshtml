<script>
    $(".pendingOrders").change(function () {
        var valueofDropDown = $(this).val();
        if (valueofDropDown == 2) {
            $.ajax({
                url: '@Url.Action("_PendingOrders", "Orders")',
                type: "GET",
                success: function (data) {
                    $(".wishlist-product").html(data);
                }
            });
        }
        else if (valueofDropDown == 3) {
            $.ajax({
                url: '@Url.Action("_DeliveredOrders", "Orders")',
                type: "GET",
                success: function (data) {
                    $(".wishlist-product").html(data);
                }
            });
        }
            else if (valueofDropDown == 4) {
            $.ajax({
                url: '@Url.Action("_CancelledOrders", "Orders")',
                type: "GET",
                success: function (data) {
                    $(".wishlist-product").html(data);
                }
            });
        }
        else {
             $.ajax({
                url: '@Url.Action("_AllOrders", "Orders")',
                type: "GET",
                success: function (data) {
                    $(".wishlist-product").html(data);
                }
            });
        }
    });

</script>