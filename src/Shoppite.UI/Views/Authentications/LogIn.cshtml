@model Shoppite.Application.Models.UsersModal
@{
    ViewData["Title"] = "Login";
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <title>Shooppy Login</title>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="icon" type="image/png" src="~/images/icons/favicon.ico" />
    <link href="~/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/vendor/fonts/font-awesome-4.7.0/css/font-awesome.min.css" rel="stylesheet" />
    <link rel="stylesheet" type="text/css" href="fonts/iconic/css/material-design-iconic-font.min.css">
    <link href="~/vendor/animate/animate.css" rel="stylesheet" />
    <link href="~/vendor/css-hamburgers/hamburgers.min.css" rel="stylesheet" />
    <link href="~/vendor/animsition/css/animsition.min.css" rel="stylesheet" />
    <link href="~/vendor/select2/select2.min.css" rel="stylesheet" />
    <link href="~/vendor/daterangepicker/daterangepicker.css" rel="stylesheet" />
    <link href="~/css2/util.css" rel="stylesheet" />
    <link href="~/css2/main.css" rel="stylesheet" />
</head>
<body style="background-image:url('~/wwwroot/images/2593105.jpg');">
    <div class="limiter">
        <div class="container-login100">
            <div class="wrap-login100">
                <form class="login100-form validate-form" method="post" enctype="multipart/form-data">
                    <span class="login100-form-title p-b-26">
                        Log In
                    </span>
                    <span class="login100-form-title p-b-48">
                        <i class="zmdi zmdi-font"></i>
                    </span>
                    <div class="wrap-input100 validate-input" data-validate="Valid email is: a@b.c">
                        <input class="input100" asp-for="Email" type="text" name="email" placeholder="Enter Email">
                        <span class="focus-input100 text-danger" asp-validation-for="Email" data-placeholder=""></span>
                    </div>
                    <div class="wrap-input100 validate-input" data-validate="Enter password">
                        <span class="btn-show-pass">
                            <i class="fa fa-eye"></i>
                        </span>
                        <input class="input100" asp-for="Password" type="password" name="password" placeholder="Enter Password">
                        <span class="focus-input100 text-danger" asp-validation-for="Password" data-placeholder=""></span>
                    </div>
                    <div class="container-login100-form-btn">
                        <div class="wrap-login100-form-btn">
                            <div class="login100-form-bgbtn"></div>
                            <button type="submit" asp-action="Login" asp-controller="Authentications" class="login100-form-btn" name="loginbtn">
                                Login
                            </button>
                        </div>
                    </div>
                    <div class="mt-3">
                        <span class="text-danger font-weight-bolder" style="font-weight:600">
                            @TempData["LoginValidError"]
                        </span>
                    </div>
                    <div class="text-center p-t-80 font-weight-bolder">
                        <span class="txt1" style="font-size:18px;">
                            Don’t have an account ?
                        </span>
                        <a class="txt2" style="font-size:20px;" data-toggle="modal" data-target="#exampleModalCenter" name="signuplink">
                            Sign Up
                        </a>
                        <a class="txt2" style="font-size:20px;" href="/Authentications/ForgotPassWord" name="forgotlink"> Forgot Password ?</a>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <form method="post" asp-controller="Authentications" asp-action="UserExistLogin" enctype="multipart/form-data">
        <!-- Modal -->
        <div class="modal fade" id="exampleModalCenter" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
            <div class="modal-dialog modal-dialog-centered" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="exampleModalLongTitle">Are you using shoppy's other stores?</h5>
                        <h5 class="modal-title d-none" id="exampleModalLongTitleChange">Please enter your other shoppy store's ID/Pass.</h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="modal-body">

                        <div class="form-row text-center" id="YNbtn">
                            <div class="col">
                                <button type="button" id="User_YES" class="btn btn-outline-success">YES</button>
                                <a href="/Authentications/Register" id="User_NO" class="btn btn-outline-info">NO</a>
                            </div>
                             <br />
                        </div>

                        <div class="d-none" id="formPart">
                            <div class="form-row" id="formPart">
                                <div class="col">
                                    <input type="email" asp-for="Exist_Email" class="form-control" placeholder="Enter Email" required>
                                </div>
                                <div class="col">
                                    <input type="password" asp-for="Exist_Password" class="form-control" placeholder="Enter Password" required>
                                </div>  <br />
                                @*<span class="text-danger font-weight-bolder" style="font-weight:600">
                                    @TempData["LoginValidError"]
                                </span>*@
                            </div>
                            <button type="submit" class="btn btn-secondary mt-2">Sign Up</button>
                        </div>

                    </div>
                </div>
            </div>
        </div>
        </div>
        <!-- end Model -->
    </form>

    <div id="dropDownSelect1"></div>
    <script src="~/vendor/jquery/jquery-3.2.1.min.js"></script>
    <script src="~/vendor/animsition/js/animsition.min.js"></script>
    <script src="~/vendor/bootstrap/js/popper.js"></script>
    <script src="~/vendor/bootstrap/js/bootstrap.min.js"></script>
    <script src="~/vendor/select2/select2.min.js"></script>
    <script src="~/vendor/daterangepicker/moment.min.js"></script>
    <script src="/~vendor/daterangepicker/daterangepicker.js"></script>
    <script src="/~vendor/countdowntime/countdowntime.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
    <script src="~/js2/main.js"></script>
</body>
</html>

