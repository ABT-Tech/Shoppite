@model Shoppite.Application.Models.MainModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
<div class="main-area">
</div>
<div class="wishlists-page-area">
    <div class="container">
        <div class="row">
            <h4 class="cart-title">My wishlists</h4>
            <div class="wishlist-product">
                @await Html.PartialAsync("_Mywishlist", Model)
            </div>
        </div>
    </div>
    @await Html.PartialAsync("~/Views/Home/_BrandZone.cshtml", Model)
</div>
@section scripts
{
    <script>
    $('.removewish').click(function (e)
    {
        e.preventDefault();
        var el = $(this),
            icon = el.find('i'),
            productId = el.data("product")
        $.ajax({
            type: 'POST',
            url: '@Url.Action("Wishlist", "Wishlist")',
            data: {
                "id": productId
            },
            success: function (data) {
                window.location.reload();
        }
         });
    });
    </script>
}