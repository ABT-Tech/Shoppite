<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
@model Shoppite.Application.Models.MainModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
<div class="row">
    @foreach (var wishlist in Model.Wishlists)
    {
        <div class="col-md-3 col-sm-6 col-12">
            <div class="wishlist-box">
                <div class="wish-image">
                    <a href="single-product.html">
                        <img style="height:244px;width:250px" src="@Url.Content("~")/@wishlist.CoverImage" alt="">
                    </a>
                </div>
                <div class="wishlisst-info ">
                    <p>@wishlist.ProductName  <a asp-action="Wishlist" class="removewish" asp-controller="Wishlist" data-product="@wishlist.ProductId"><i class="fa fa-times-circle"></i></a></p>
                </div>
                <div class="product-info">
                    <span>@wishlist.Price <del>@wishlist.OldPrice</del></span>
                </div>
            </div>
        </div>
    }
</div>
<script>
    $('.removewish').click(function (e)
    {
        e.preventDefault();
        var el = $(this),
            icon = el.find('i'),
            productId = el.data("product")
        $.ajax({
            type: 'POST',
            url: '@Url.Action("Wishlist", "Wishlist")',
            data: {
                "id": productId
            },
            success: function (data) {
                window.location.reload();
        }
         });
    });
</script>