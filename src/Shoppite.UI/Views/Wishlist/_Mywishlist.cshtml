@model Shoppite.Application.Models.MainModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
<div class="row">
    @foreach (var wishlist in Model.Wishlists)
    {
        <div class="col-md-3 col-sm-6 col-12">
            <div class="wishlist-box">
                <div class="wish-image">
                    <a href="single-product.html">
                        <img style="height:244px;width:250px" src="@Url.Content("~")/@wishlist.CoverImage" alt="">
                    </a>
                </div>
                <div class="wishlisst-info ">
                    <p>@wishlist.ProductName  <a asp-action="Wishlist" onclick="RemoveFromWishList('@wishlist.ProductId')" asp-controller="Wishlist"><i class="fa fa-times-circle"></i></a></p>
                </div>
                <div class="product-info">
                    @*//<h5><a href="#" class="product_name_Over">@group.ProductName</a></h5>*@
                    <span>@wishlist.Price <del>@wishlist.OldPrice</del></span>
                </div>
            </div>
        </div>
    }
</div>
<script>
function RemoveFromWishList(ProductId)
{
    $.ajax({
        type: 'POST',
        url: "@Url.Action("Wishlist", "Wishlist")",
        data: { id:ProductId },
        success: function (data) {
            location.window.href = "http://localhost:50786/Wishlist/Wishlist";
        }
    });
}
</script>
