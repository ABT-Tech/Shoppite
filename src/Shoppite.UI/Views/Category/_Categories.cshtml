@model Shoppite.Application.Models.CategoryMasterModel
@if (Model.ProductsDetails != null)
{
    @foreach (var item in Model.ProductsDetails)
    {
        <li>
            <a href="shop-grid.html">@item.CategoryName</a>
            <div class="megamenudown">
                <div class="mega-top">
                    <div class="mega-item-menu">
                        @*<a class="title" href="shop-grid.html"><span></span></a>*@
                        @foreach (var product in item.ProductsDetails)
                        {
                            <a href="#"><span>@product.ProductName</span></a>
                        }
                    </div>
                </div>
            <div class="mega-bottom">
                @foreach (var product in item.ProductsDetails)
                {
                    <a href="#"><img src="@Url.Content("~")@product.CoverImage" alt=""></a>
                }
            </div>
            </div>
        </li>
    }
}