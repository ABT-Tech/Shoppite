<script>
    // Change styles according to panels state

    $('.panel').on('show.bs.collapse hide.bs.collapse', function () {

        $(this).toggleClass("paytmbtn datainputs");
       // $(this).find(".indicator").toggleClass("glyphicon-chevron-right glyphicon-chevron-down");
    })

    // Initialize collapsibles

    $('.collapse').collapse({
        toggle: false,
        parent: '#accordion'
    });

    // Bind panels behaviour to button

    var inputs = $("#myForm input[required='required']");

    $('#cashondeliverybtn').click(function () {

        inputs.each(function () {

            if ($(this).val() == "") {

                var current = $(this).closest(".panel-collapse");

                if (!current.hasClass("in")) {
                    current.collapse("show");
                }

                return false;
            }
        });
    });

