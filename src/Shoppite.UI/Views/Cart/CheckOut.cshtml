<div class="main-area">

    <!-- Start checkout page area -->
    <div class="checkout-page-area">
        <div class="container-fluid">
            <div class="breadcrumb">
                <a title="Return to Home" href="/" class="home">Home</a>
                <span class="navigation-pipe"><i class="fa fa-angle-right"></i></span>
                checkout
            </div>
            <!-- Start checkout content -->
            <div class="checkout-content-area">
                <h4 class="cart-title">CHECKOUT</h4>
                <div class="checkout-content">
                    <div class="row">
                        <div class="col-lg-9 col-md-12 mb-5">
                            <form asp-action="MakePaymentRequest" id="myForm" asp-controller="Cart" enctype="multipart/form-data" method="post" class=" pt-2 text-capitalize">
                                <input type="hidden" asp-for="OrderBasicModel.OrderGuid" />

                                <div id="accordion" class="panel-group">
                                    <div class="panel datainputs sauget-accordion">

                                        <div id="headingOne" class="panel-heading" data-toggle="collapse" data-parent="#accordion" data-target="#collapse1">
                                            <h4 class="panel-title">
                                                <a class="accordion-toggle" style="display:flex;">
                                                    <span style=" width: 29px; padding: 6px 17px 0px 11px; font-size: 15px; margin-right: 25px; }">1</span>  Billing Information
                                                </a>

                                            </h4>
                                        </div>
                                        <div id="collapse1" class="panel-collapse collapse in" style="">
