                                                    <button style="width:auto;margin:15px;height:100%;" id="paytm-btn-click" class="SavePaymentBtn"><img src="~/images/Payment.gif" style="height:50px" alt="buttonpng" border="0" /></button>
                                                }
                                                <button id="cashondeliverybtn" style="width: auto; margin: 15px; height: 100%;" type="submit" class="SavePaymentBtn"><img src="~/images/cash-on-delivery-icon-14.jpg" style="height:50px" alt="buttonpng" border="0" /></button>

                                                </div>

                                            </div>
                                        </div>
                                    </div>
                              
                            </form>
                        </div>
                        <div class="col-lg-3 col-md-12">
                            <div class="checkout-sidebar">
                                <h4>CHECKOUT PROGRESS</h4>
                                <ul>
                                    @*<li><a href="#">Billing Address</a></li>*@
                                    <li><a href="#">Sipping Address</a></li>
                                    @*<li><a href="#">Shiping Method</a></li>*@
                                    <li><a href="#">Payment Method</a></li>
                                </ul>
                            </div>
                        </div>
                    </div>
                    <!-- End checkout content -->
                </div>
            </div>
            <!-- End checkout page area -->
        </div>
    </div>
</div>

