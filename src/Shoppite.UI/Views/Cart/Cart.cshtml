@foreach (var rewardbalance in Model.myreward)
{
    @if (rewardbalance.Operation_type == "Credit")
    {
        rewardpointBalance += @rewardbalance.Reward_points;
    }
    else
    {
        rewardpointBalance -= @rewardbalance.Reward_points;
    }
}
