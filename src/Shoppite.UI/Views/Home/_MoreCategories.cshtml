@model Shoppite.Application.Models.MainModel
@if (Model.ProductsDetails != null)
{
    <li style="float:right">
        <a href="#">More</a>
        <div class="megamenudown-mini home-ve">
            <div class="mega-top">
                <div class="mega-item-menu">
                    @foreach (var item in Model.Categories)
                    {
                        <a asp-action="AllProducts" asp-route-CategoryId="@item.CategoryId" asp-controller="Home"><span>@item.CategoryName</span></a>
                    }
                </div>
            </div>
        </div>
    </li>
}