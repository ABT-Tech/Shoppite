@model Shoppite.Application.Models.MainModel
@if (Model.ProductsDetails != null)
{
    <li style="float:right">
        <a href="#" name="morelink">More</a>
        <div class="megamenudown-mini home-ve">
            <div class="mega-top">
                <div class="mega-item-menu" style="max-width: 220px !important;">
                    @foreach (var item in Model.Categories.Where(x=>x.ParentCategoryId!=0).GroupBy(x=>x.CategoryId).Select(s=>s.First()))
                    {
                        <a asp-action="AllProducts" asp-route-CategoryId="@item.CategoryId" asp-controller="Home" title="@item.CategoryName" name="categorynamelink" class="product_name_Over"><span>@item.CategoryName</span></a>
                    }  
                </div>
            </div>
        </div>
    </li>
}