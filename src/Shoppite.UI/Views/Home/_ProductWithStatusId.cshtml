@model Shoppite.Application.Models.MainModel
<!-- Start new product area -->
<link href="~/css/site.css" rel="stylesheet" />
<div class="new-product-area">
    <div class="container">
        @foreach (var product in Model.ProductNewArrivalModel.GroupBy(x => x.StatusId))
        {
            foreach (var groupq in product.Take(1))
            {
                <!-- Start product title -->
                <div class="new-product-title">
                    <h4><span>@groupq.deals </span></h4>
                </div>
                <!-- End product title -->
                <!-- Start new product -->
                <div class="new-products">
                    <div class="producttabcarosel carosel-product5 owl-carousel">

                        @foreach (var group in product)
                        {

                            <div class="product-item">
                                <div class="top-item">
                                    <a href="#">
                                        <img src="@group.image"  alt="@group.ProductName" style="height: 244px;width: 299px;"/>
                                    </a>
                                    <div class="top-cocial">
                                        <p>
                                            <i class="fa fa-star-o"></i>
                                            <i class="fa fa-star-o"></i>
                                            <i class="fa fa-star-o"></i>
                                            <i class="fa fa-star-o"></i>
                                            <i class="fa fa-star-o"></i>
                                        </p>
                                    </div>
                                </div>
                                <div class="bottom-item">
                                    <div class="product-info">
                                        <h5><a href="#" class="product_name_Over">@group.ProductName</a></h5>
                                        <span>₹@group.Price</span>
                                        <p>
                                            <i class="fa fa-star-o"></i>
                                            <i class="fa fa-star-o"></i>
                                            <i class="fa fa-star-o"></i>
                                            <i class="fa fa-star-o"></i>
                                            <i class="fa fa-star-o"></i>
                                        </p>
                                    </div>
                                    <div class="product-social">
                                        <ul>
                                            <li><a href="#"><i class="fa fa-external-link"></i></a></li>
                                            <li><a href="#"><i class="fa fa-heart-o"></i></a></li>
                                            <li><a href="#"><i class="fa fa-bar-chart"></i></a></li>
                                            <li><a href="#"><i class="fa fa-shopping-cart"></i></a></li>
                                        </ul>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                </div>
                <!-- End new product -->
            }
        }
    </div>
</div>