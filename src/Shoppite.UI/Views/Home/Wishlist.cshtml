@model Shoppite.Application.Models.MainModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
<div class="main-area">
    <div class="megamenu-area">
        <div class="container">
            <div class="row">
                <div class="col-md-8">
                    <div class="megamenu">
                        <nav>
                            <ul>
                                <li>
                                    <a class="home" href="index.html">Home</a>
                                    <div class="megamenudown-mini home-ve">
                                        <div class="mega-top">
                                            <div class="mega-item-menu">
                                                <a class="title" href="#"><span>Home variyation</span></a>
                                                <a href="index-2.html"><span>Home2</span></a>
                                                <a href="index-3.html"><span>Home3</span></a>
                                                <a href="index-4.html"><span>Home4</span></a>
                                            </div>
                                        </div>
                                    </div>
                                </li>
                                @await Html.PartialAsync("_Categories", Model)
                                @await Html.PartialAsync("_MoreCategories", Model)
                            </ul>
                        </nav>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="search-box">
                        <form method="get" action="#" id="searchbox-eleyas">
                            <p>
                                <input type="text" value="" placeholder="You keyword..." name="search_query">
                                <button class="button-search" name="submit_search" type="submit">
                                    <span><i class="fa fa-search"></i></span>
                                </button>
                            </p>
                        </form>
                    </div>
                </div>
                <div class="col-md-1">
                    <div class="megamenu">
                        <nav>
                            <ul>
                                <li>
                                    <div class="user-icon">
                                        <i class="fa fa-user"></i>
                                        <div class="megamenudown-mini home-ve">
                                            <div class="mega-top">
                                                <div class="mega-item-menu">
                                                    <a href="#"><span>My account</span></a>
                                                    <a asp-action="Wishlist"><span>My wishlist</span></a>
                                                    <a href="#"><span>My cart</span></a>
                                                    <a href="#"><span>Sign in</span></a>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </li>
                            </ul>
                        </nav>
                    </div>
                </div>
            </div>
        </div>
    </div>   
    <!-- Start wishlists page area -->
    <div class="wishlists-page-area">
        <div class="container">
            <div class="row">
                <div class="breadcrumb" style="color:#777; background-color: white !important">
                    Home
                    @*<a title="Return to Home" href="index.html" class="home">Home</a>*@
                    <span class="navigation-pipe"><i class="fa fa-angle-right"></i></span>My account
                    @* <a title="Return to Home" href="index.html" class="home">My account</a>*@
                    <span class="navigation-pipe"><i class="fa fa-angle-right"></i></span>
                    Wishlist
                </div>
            </div>
            <div class="row">
                <h4 class="cart-title">My wishlists</h4>
                <div class="wishlist-permalink">
                    <p><a href="#"></a></p>
                </div>
                <div class="wishlist-product">
                    <div class="row">
                        @foreach (var wishlist in Model.Wishlists)
                        {
                            <div class="col-md-3 col-sm-6 col-12">
                                <div class="wishlist-box">
                                    <div class="wish-image">
                                        <a href="single-product.html">
                                            <img style="height:244px;width:250px" src="@Url.Content("~")/@wishlist.CoverImage" alt="">
                                        </a>
                                    </div>
                                   @* <div class="wishlisst-info">
                                        
                                        <div class="wishlist-product-detail">

                                            <span>@wishlist.Price <del>@wishlist.OldPrice</del></span>
                                        </div>
                                    </div>*@
                                <div class="wishlisst-info ">
                                    <p>@wishlist.ProductName  <a asp-action="Wishlist" onclick="RemoveFromWishList('@wishlist.ProductId')" asp-controller="Home"><i class="fa fa-times-circle"></i></a></p>
                                    @*<h5><a href="#">@wishlist.ProductName</a></h5>*@
                                    @*<span>@wishlist.Price <del>@wishlist.OldPrice</del></span>*@
                                </div>
                                </div>
                            </div>
                        }
                </div>
                <p class="wishlist-back">
                    <a href="#"><i class="fa fa-angle-left"></i>Back to your account</a> <a asp-action="Index"><i class="fa fa-angle-left"></i>Home</a>
                </p>
            </div>
        </div>
    </div>
    @await Html.PartialAsync("_BrandZone", Model)
</div>
<script>
function RemoveFromWishList(id)
{
    $.ajax({
        type: 'POST',
        url: "@Url.Action("Wishlist", "Home")",
        data: { ProductId:id },
        success: function (data) {
            alert(data);
        }
    });
    console.log(id)
}
</script>
